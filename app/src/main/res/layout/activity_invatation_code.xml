<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="project.yidun.com.yidun.RegisterActivity">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="35dp">
    <ImageView
        android:id="@+id/tv_back"
        android:layout_width="14dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:padding="2dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:src="@mipmap/zuo"
        />
    <TextView
        android:id="@+id/tv_yidun"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="19sp"
        android:layout_marginLeft="107dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="邀请码" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="#f0f0f0"
      >
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#f0f0f0"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="您的邀请码"
        android:textSize="15sp"
        android:textColor="#4a4a4a"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_invitation"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="正在获取"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_corner_invitation"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击可复制"
        android:textColor="#4a4a4a"
        android:layout_marginTop="6.5dp"
        android:textSize="10sp"
        />

  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:layout_marginTop="25dp"
      android:background="#f0f0f0"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:orientation="horizontal"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <TextView
          android:id="@+id/tv_time"
          android:layout_width="180dp"
          android:layout_height="match_parent"
          android:text="邀请记录"
          android:textColor="#4a4a4a"
          android:gravity="center_vertical"
          android:paddingLeft="52.5dp"
          android:textSize="16sp"
          />
      <TextView
          android:id="@+id/tv_know_more"
          android:layout_width="wrap_content"
          android:layout_marginLeft="271dp"
          android:layout_height="match_parent"
          android:text="查看更多"
          android:textSize="11sp"
          android:gravity="center"
          />
      <ImageView
          android:id="@+id/tv_box"
          android:src="@mipmap/you"
          android:padding="18.5dp"
          android:layout_width="80dp"
          android:layout_alignParentRight="true"
          android:layout_height="match_parent" />
    </RelativeLayout>


  </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#f0f0f0"
      />
  <ListView
      android:id="@+id/lv_invitation"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </ListView>



  <TextView
      android:layout_width="match_parent"
      android:layout_height="400dp"
      android:background="#f0f0f0"
      android:id="@+id/textView2" />

</LinearLayout>
