<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="project.yidun.com.yidun.RegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:src="@mipmap/zuo"
            />
        <TextView
            android:id="@+id/tv_yidun"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="19sp"
            android:layout_marginLeft="105dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="提现" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f0f0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="账户余额"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/tv_balance"
                android:layout_toLeftOf="@+id/tv_box"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="0.00"
                android:gravity="center"
                android:textColor="#4a4a4a"
                android:textSize="17sp"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_box"
                android:layout_width="28dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_get_cash"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="请输入提现金额"
            android:paddingRight="36dp"
            android:gravity="center|left"
            android:textSize="13sp"
            android:layout_marginLeft="22.3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_marginLeft="50.4dp"
            android:layout_height="match_parent"
            android:text="100"
            android:gravity="center"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_marginLeft="100dp"
            android:layout_height="match_parent"
            android:text="300元"
            android:gravity="center"
            />

    </LinearLayout>
    <TextView
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="注: 一次提现100的整数"
            android:gravity="center"
            android:paddingRight="14dp"
            android:textSize="11sp"
            android:textColor="#c8c8c8"
            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f0f0f0"
        />


    <RelativeLayout
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_tixian"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_corner_register_2"
            >
            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="提现"
                />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#f0f0f0"
        android:id="@+id/textView2" />

</LinearLayout>
