<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.yidun.com.yidun.RegisterActivity">
<LinearLayout
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/dbj"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:src="@mipmap/baizuo"
            />
        <TextView
            android:id="@+id/tv_yidun"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="19sp"
            android:layout_marginLeft="105dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="聚宝涡轮" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_wolun"
        android:layout_marginTop="90dp"
        android:layout_width="270dp"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="2.7dp"
            android:background="@drawable/shape_corner_register_4"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_register_1"
            >

            <TextView
                android:id="@+id/tv_enter_wolun"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#287FC7"
                android:text="进入涡轮"
                />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="第一次"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_wolun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:divider="@null"
    ></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            </LinearLayout><![CDATA[
            LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            ]]>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_disappear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000"
            />
    <LinearLayout

        android:layout_width="270dp"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/shape_corner"
        >

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="确定支付"
            android:textColor="#9B9B9B"
            android:textSize="16dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="#E3CBB7"
            />
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="确定"
            android:textColor="#4A4A4A"
            android:gravity="center"
            />

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

