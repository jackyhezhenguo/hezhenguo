<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="project.yidun.com.yidun.RegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <TextView
            android:id="@+id/tv_yidun"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="19sp"
            android:layout_marginLeft="135dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="会员登录" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:textSize="19sp"
        android:text="登录后填写信息"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:text="参与聚宝涡轮排位"
        android:textSize="19sp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:text="充值"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_corner_register"
            />
        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="43dp"
            android:layout_marginLeft="1dp"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_corner_register_1"
            >
            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"

                android:hint="请输入手机号码"
                />
            <TextView
                android:layout_marginLeft="40dp"
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="18dp" />
            <TextView
                android:id="@+id/tv_send_verification_code"
                android:layout_marginLeft="10dp"
                android:text="发送验证码"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_width="80dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"

            android:layout_centerVertical="true"
            android:text="充值"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_corner_register"
            />
        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="43dp"
            android:layout_marginLeft="1dp"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_corner_register_1"
            >
            <EditText
                android:id="@+id/et_input_verification_code"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:hint="请输入验证码"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_enter_yidun"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_corner_register_2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="蓝鸥飞翔"
                />

        </LinearLayout>
    </RelativeLayout>
        <TextView
            android:layout_marginTop="11dp"
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="立即注册"
            />
</LinearLayout>